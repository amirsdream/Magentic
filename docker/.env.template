# MCP Docker Configuration Template
# Copy to .env and customize

# ============================================
# Gateway Configuration
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retry attempts
MAX_RETRIES=3

# Circuit breaker opens after this many failures
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker resets after this many seconds
CIRCUIT_BREAKER_TIMEOUT=60

# Enable metrics endpoint
ENABLE_METRICS=true

# Response cache TTL in seconds
CACHE_TTL=300

# ============================================
# GitHub Server
# ============================================

# GitHub personal access token (optional but recommended)
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# ============================================
# Filesystem Server
# ============================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# ============================================
# Web Search Server
# ============================================

# Maximum search results
SEARCH_MAX_RESULTS=10

# Search timeout in seconds
SEARCH_TIMEOUT=30

# ============================================
# Python Execution Server
# ============================================

# Maximum code execution time in seconds
MAX_EXECUTION_TIME=30

# Maximum memory for execution in MB
MAX_MEMORY_MB=256

# Maximum output size in bytes
MAX_OUTPUT_SIZE=65536

# ============================================
# Database Server
# ============================================

# Maximum query results
DB_MAX_RESULTS=1000

# Allow write operations (INSERT, UPDATE, DELETE)
ALLOW_WRITE_OPS=true

# ============================================
# Memory Server
# ============================================

# Default TTL for keys in seconds (0 = no expiry)
DEFAULT_TTL=3600

# Maximum keys per namespace
MAX_KEYS_PER_NAMESPACE=10000

# Maximum value size in bytes (default: 1MB)
MAX_VALUE_SIZE=1048576

# ============================================
# Version (managed by mcp.sh)
# ============================================

MCP_VERSION=2.0.0
